+      local safe_list = "";
+      table.foreach(self.SafeWires, function(_index)
+         if safe_list == "" then
+            safe_list = wirenames[_index]
+         elseif _index == #self.SafeWires then
+            safe_list = safe_list .. ", and " .. wirenames[_index]
